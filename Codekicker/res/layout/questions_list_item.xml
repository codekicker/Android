<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical"
			style="@style/Application">
	<TextView android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:id="@+id/textViewTitle"
			style="@style/QuestionsList.Title"
			android:text="Title"/>
	<TextView android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:id="@+id/textViewQuestionBody"
			style="@style/QuestionsList.QuestionBody"
			android:text="Question"/>
	<de.codekicker.app.android.widget.FlowLayout android:layout_height="wrap_content"
												android:layout_width="fill_parent"
												android:id="@+id/flowLayoutTags"
												android:layout_marginBottom="5sp" />
	<LinearLayout android:layout_height="wrap_content"
				android:layout_width="fill_parent"
				android:orientation="horizontal"
				android:paddingLeft="5sp"
				android:paddingBottom="10sp">
		<LinearLayout android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					style="@style/QuestionsList.Score">
			<TextView android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:id="@+id/textViewVoteScore"
					style="@style/QuestionsList.Score.Count"
					android:text="0" />
			<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					style="@style/QuestionsList.Score.Text"
					android:text="@string/voteScore" />
		</LinearLayout>
		<LinearLayout android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					style="@style/QuestionsList.Score">
			<TextView android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:id="@+id/textViewAnswerCount"
					style="@style/QuestionsList.Score.Count"
					android:text="0" />
			<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					style="@style/QuestionsList.Score.Text"
					android:text="@string/answers" />
		</LinearLayout>
		<LinearLayout android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					style="@style/QuestionsList.Score">
			<TextView android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					style="@style/QuestionsList.Score.Count"
					android:id="@+id/textViewViewCount"
					android:text="0" />
			<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					style="@style/QuestionsList.Score.Text"
					android:text="@string/views" />
		</LinearLayout>
		<TextView android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:id="@+id/textViewAskDate"
				style="@style/QuestionsList.AskDate"
				android:text="@string/askDate" />
	</LinearLayout>
</LinearLayout>