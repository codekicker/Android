<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent">
	<LinearLayout android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				style="@style/Application"
				android:orientation="vertical"
				android:id="@+id/rootLinearLayout">
		<TextView android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				style="@style/QuestionsList.Title"
				android:id="@+id/textViewTitle" android:text="Title"/>
		<include layout="@layout/question_details_answer" />
		<LinearLayout android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:id="@+id/answers">
			<TextView android:layout_height="wrap_content"
					android:layout_width="fill_parent"
					android:text="@string/answersCount"
					android:id="@+id/textViewAnswerCount"
					style="@style/QuestionDetails.AnswerCount"/>
			<View style="@style/QuestionDetails.Divider" />
		</LinearLayout>
		<LinearLayout android:layout_height="wrap_content"
					android:layout_width="fill_parent"
					android:id="@+id/linearLayoutAnswers" />
		<EditText android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:hint="@string/yourAnswer"
				android:id="@+id/editTextYourAnswer" />
		<Button android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/answerQuestion"
				android:id="@+id/buttonAnswer"
				android:layout_gravity="right" />
	</LinearLayout>
</ScrollView>